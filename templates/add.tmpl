{{ define "add" }}
{{ template "header" }}

<div class="card">
    <div class="card-header">
        Employees
    </div>

    <div class="card-body">
        
        <form action="/insert" method="post">
            <div class="form-group">
              <label for="">Name</label>
              <input type="text"
                class="form-control" name="name" id="name" aria-describedby="helpId" placeholder="">
              <small id="helpId" class="form-text text-muted">Write the employee name</small>
            </div>
            <div class="form-group">
              <label for="">Email</label>
              <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelpId" placeholder="">
              <small id="emailHelpId" class="form-text text-muted">Write the employee email</small>
            </div>
            <button type="submit" class="btn btn-primary">Add new employee</button>
        </form>

    </div>
</div>

{{ template "footer" }}
{{ end }}